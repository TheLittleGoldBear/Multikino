@model Multikino.Models.View.ScreeningListViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Seanse";
}
<form method="get" class="row g-2 mb-4">
    <div class="col-sm-4">
        <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Szukaj filmu lub sali..." />
    </div>
    <div class="col-sm-2">
        <button class="btn btn-outline-primary" type="submit">Filtruj</button>
    </div>
</form>

<table class="table table-striped mb-5">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewBag.MovieSort"
                   asp-route-search="@Model.Search">Film</a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewBag.HallSort"
                   asp-route-search="@Model.Search">Sala</a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewBag.DateSort"
                   asp-route-search="@Model.Search">Data / godzina</a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewBag.LanguageSort"
                   asp-route-search="@Model.Search">Język</a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewBag.Is3DSort"
                   asp-route-search="@Model.Search">3D</a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewBag.FreeSort"
                   asp-route-search="@Model.Search">Wolne miejsca</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Screenings.Any())
        {
            <tr>
                <td colspan="7" class="text-center">Brak nadchodzących seansów.</td>
            </tr>
        }
        else
        {
            @foreach (var s in Model.Screenings)
            {
                var free = s.Hall.Capacity - (s.Tickets?.Count() ?? 0);
                <tr>
                    <td>@s.Movie?.Title</td>
                    <td>@s.Hall?.Name</td>
                    <td>@s.StartTime.ToLocalTime().ToString("g")</td>
                    <td>@s.Language</td>
                    <td>@(s.Is3D ? "Tak" : "Nie")</td>
                    <td>@free</td>
                    <td>
                        @if (free > 0)
                        {
                            <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-primary">Kup bilet</a>
                        }
                        else
                        {
                            <span class="text-danger">Brak miejsc</span>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Lista zakupionych biletów -->
<h2>Moje bilety</h2>
@if (!Model.MyTickets.Any())
{
    <div class="alert alert-info">Nie masz jeszcze żadnych zakupionych biletów.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Film</th>
                    <th>Sala</th>
                    <th>Cena</th>
                    <th>Data seansu</th>
                    <th>Data zakupu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model.MyTickets)
                {
                    <tr>
                        <td>@t.Screening.Movie.Title</td>
                        <td>@t.Screening.Hall.Name</td>
                        <td>@t.Price.ToString("C2", System.Globalization.CultureInfo.GetCultureInfo("pl-PL"))</td>
                        <td>@t.Screening.StartTime.ToLocalTime().ToString("g")</td>
                        <td>@t.SoldAt.ToLocalTime().ToString("g")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
