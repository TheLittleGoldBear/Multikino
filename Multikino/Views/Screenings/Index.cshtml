@model Multikino.Models.View.ScreeningListViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Seanse";
}

<h1 class="mb-4">Seanse</h1>

<form method="get" class="row g-2 mb-4">
    <div class="col-sm-4">
        <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Szukaj filmu lub sali..." />
    </div>
    <div class="col-sm-2">
        <button class="btn btn-outline-primary" type="submit">Filtruj</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewBag.MovieSort"
                   asp-route-search="@Model.Search">
                    Film
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewBag.HallSort"
                   asp-route-search="@Model.Search">
                    Sala
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewBag.DateSort"
                   asp-route-search="@Model.Search">
                    Data / godzina
                </a>
            </th>
            <th>Język</th>
            <th>3D</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Screenings.Any())
        {
            <tr>
                <td colspan="6" class="text-center">Brak nadchodzących seansów.</td>
            </tr>
        }
        else
        {
            @foreach (var s in Model.Screenings)
            {
                <tr>
                    <td>@s.Movie?.Title</td>
                    <td>@s.Hall?.Name</td>
                    <td>@s.StartTime.ToLocalTime().ToString("g")</td>
                    <td>@s.Language</td>
                    <td>@(s.Is3D ? "Tak" : "Nie")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-primary">Kup bilet</a>
                        <span class="ms-2 text-muted">Wolnych: @(s.Hall.Capacity - (s.Tickets?.Count() ?? 0))</span>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
