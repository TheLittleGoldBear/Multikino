@model Multikino.Models.Movie

<h2>Dodaj film</h2>

<form asp-action="CreateMovie" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group mb-2">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="DurationMin" class="control-label"></label>
        <input asp-for="DurationMin" class="form-control" />
        <span asp-validation-for="DurationMin" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="ReleaseDate" class="control-label"></label>
        <input asp-for="ReleaseDate" class="form-control" type="date" />
        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="BasePrice" class="control-label"></label>
        <input asp-for="BasePrice" class="form-control" />
        <span asp-validation-for="BasePrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Plakat filmu (jpg/png/webp, max 5MB)</label>
        <input type="file" name="poster" class="form-control" accept="image/*" />
        <span class="text-danger">
            @ViewData.ModelState["poster"]?.Errors.FirstOrDefault()?.ErrorMessage
        </span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Zapisz</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Powrót</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
